@model PlaylistGridResponse

@{
    ViewData["Title"] = "Playlists";
    var pageQuery = Context.Request.Query["page"].ToString();
    var currentPage = !string.IsNullOrEmpty(pageQuery) ? int.Parse(pageQuery) : 1;
    var totalPages = Model.Count > 0 ? (int)Math.Ceiling((double)Model.Count / 100) : 1;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Playlists</h4> 
    </div>

    <div class="row">
        @if (Model.Records?.Count > 0)
        {
            @foreach (var playlist in Model.Records)
            {
                <div class="col-xl-5 col-lg-3 col-md-4 col-sm-6 mb-4">
                    @Html.DisplayFor(m => playlist, "GridItem")
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">No playlists found.</p>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav aria-label="playlist pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Grid", "Dash", new { type = "playlists", page = currentPage - 1 })">Previous</a>
                </li>
                
                @* @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Grid", "Dash", new { type = "playlists", page = i })">@i</a>
                    </li>
                }
                 *@
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Grid", "Dash", new { type = "playlists", page = currentPage + 1 })">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>