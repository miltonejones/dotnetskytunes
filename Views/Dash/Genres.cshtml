@model GenreGridResponse

@{
    ViewData["Title"] = "Genres";
    var pageQuery = Context.Request.Query["page"].ToString();
    var currentPage = !string.IsNullOrEmpty(pageQuery) ? int.Parse(pageQuery) : 1;
    var totalPages = Model.Count > 0 ? (int)Math.Ceiling((double)Model.Count / 100) : 1;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Genre</h1>
        <div class="pagination-info">

        @if (totalPages > 1)
        {
            <nav aria-label="genre pagination">
                <ul class="pagination justify-content-center align-items-center gap-1">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Grid", "Dash", new { type = "genres", page = currentPage - 1 })">Previous</a>
                    </li> 
                    Page @currentPage of @totalPages
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Grid", "Dash", new { type = "genres", page = currentPage + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        }

        </div>
    </div>

    <div class="row">
        @if (Model.Records?.Count > 0)
        {
            @foreach (var genre in Model.Records)
            {
                <div class="col-xl-5 col-lg-3 col-md-4 col-sm-6 mb-4">
                    @Html.DisplayFor(m => genre, "GridItem")
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">No genres found.</p>
            </div>
        }
    </div>

</div>