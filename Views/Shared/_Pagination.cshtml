@model dynamic

@{
    var pageQuery = Context.Request.Query["page"].ToString();
    var currentPage = !string.IsNullOrEmpty(pageQuery) ? int.Parse(pageQuery) : 1;
    int totalItems = Model?.Count ?? 0;
    int pageSize = 100;
    int totalPages = totalItems > 0 ? (int)Math.Ceiling((double)totalItems / pageSize) : 1;
}

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage - 1)">Previous</a>
            </li>
            
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}