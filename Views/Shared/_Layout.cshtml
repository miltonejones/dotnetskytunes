@{
    string IsActive(string controller, string action = "", string type = "")
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentType =  Context.Request.RouteValues["type"]?.ToString() ?? Context.Request.Query["type"].ToString();

        if (action == "Library" && action == currentAction && currentController == "Detail" && controller == "Detail")
            return "text-dark active";

            
        if (currentController ==  "Detail" && type == currentType && (controller == "Detail"||controller == "Dash")) 
        {
            return "text-dark active";
        }

        if (currentAction ==  action && currentController == controller && currentType.IndexOf(type)> -1) 
        {
            return "text-dark active";
        }

        
        @* if (controller == currentController)
        {
            if (controller == "Dash" && type == currentType)
                return "text-dark active";
            if (controller == "Home")
                return "text-dark active"; 
        } *@
        
        return "";
    }

    
        var controllerText = ViewContext.RouteData.Values["controller"]?.ToString();
        var actionText = ViewContext.RouteData.Values["action"]?.ToString();
        var typeText = Context.Request.Query["type"].ToString();
        var routeText = Context.Request.RouteValues["type"]?.ToString();
}


