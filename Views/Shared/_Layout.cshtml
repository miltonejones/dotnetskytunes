    <script src="~/js/playlist.js" asp-append-version="true"></script>
    
    <script>

        let djType = "deep";
        function gotoPage(url) { 
            window.location.href = url;
        }

        function setDj(type) { 
            djType = type;
            localStorage.setItem('djType', type)
            setLLM ();
        }


        function setLLM () {  
            djType = localStorage.getItem('djType') || "deep";
            document.querySelectorAll(".dj").forEach((item) => { 
                var dj = item.getAttribute("data-dj"); 
                item.classList.remove("active")  ;
                if (dj === djType) {
                    item.classList.add("active");
                }  

                item.addEventListener('click', function(e) {
                   setDj(dj)
                });
                
            });
        }
        
        document.addEventListener("DOMContentLoaded", setLLM);

        // Search functionality with debounce
        (function() {
            const searchInput = document.getElementById('searchInput');
            let debounceTimer;

            function performSearch() {
                const searchTerm = searchInput.value.trim();
                if (searchTerm.length > 0) {
                    // Encode the search term for URL safety
                    const encodedTerm = encodeURIComponent(searchTerm);
                    window.location.href = '/Search/' + encodedTerm;
                }
            }

            function clearDebounce() {
                if (debounceTimer) {
                    clearTimeout(debounceTimer);
                }
            }

            searchInput.addEventListener('input', function() {
                clearDebounce();
                
                const searchTerm = this.value.trim();
                if (searchTerm.length > 0) {
                    // Set debounce timer for 300ms
                    debounceTimer = setTimeout(performSearch, 300);
                }
            });

            // Also allow pressing Enter for immediate search
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    clearDebounce();
                    performSearch();
                }
            });

            // Clear timer if user navigates away
            window.addEventListener('beforeunload', clearDebounce);
        })();
    </script>
     
</body>
